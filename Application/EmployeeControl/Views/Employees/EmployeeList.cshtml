@model EmployeeControl.Models.EmployeeListModel

@if (Model != null && Model.Employees.Count > 0)
{
    <table id="table" class="table table-hover table-mc-orange">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td data-title="Name">@employee.Name</td>
                    <td data-title="Role">@employee.Role.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else {
    <p>No employees.</p>
}
